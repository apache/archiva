      </dependency>
      <dependency>
        <groupId>org.apache.maven.archiva</groupId>
        <artifactId>archiva-applet</artifactId>
        <version>${pom.version}</version>
      </dependency>
      <dependency>
        <groupId>org.apache.maven.archiva</groupId>
        <artifactId>archiva-security</artifactId>
